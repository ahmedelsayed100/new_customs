<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_template">
        <t t-call="web.html_container">
            <!-- <div t-attf-class="header">-->
            <!--    <div class="row justify-content-end no-gutters">-->
            <!--        <div class="col-auto order-last">-->
            <!--            <img src="/new_custom/static/img/header.jpeg" style="max-height: 90px; width: 100%; margin: 0;"/>-->
            <!--        </div>-->

            <!--    </div>-->
            <!--</div> -->
            <div t-attf-class="header">
                <div>
                    <img src="/new_custom/static/img/header.jpeg" style="height: 120px; width: 100%;"/>
                </div>
            </div>


            <t t-foreach="docs" t-as="doc">
                <div class="page" style="padding-left:10px;padding-right:10px;">
                    <table style="border-collapse: collapse;width: 100%;">

                        <thead>
                            <span t-filed="doc.partner_id"/>


                            <tr>
                                <th colspan="4" style="width: 33.33%; text-align: left;">
                                    <span>
                                        <!-- <p> التاريخ   /  /    14هـ</p> -->
                                        <!--<p>20    /  /   الموافق </p>-->

                                        <strong t-esc="doc.payment_date" style="marign-right:5px"/>
الموافق
                                    </span>
                                </th>
                                <th colspan="4" style="width: 33.33%; text-align: center;">
                                    <span>
                                        (                                        <strong t-esc="doc.ref"/>
                                        )                                        <strong style="direction: rtl;">سند صرف رقم </strong>
                                        <br/>
                                        <!-- <p style="direction: rtl;">سند صرف رقم (67)</p> -->
                                        <strong>Payment Voucher No.</strong>
                                        (                                        <strong t-esc="doc.ref"/>
)
                                                                                                                                                                                                                                                                                                                                                                        <!-- <p>Payment Voucher No.(67)</p> -->
                                    </span>
                                </th>
                                <th colspan="4" style="width:33.33%; text-align: right;">
                                    <p>
                                        <strong style="margin-right:15px">Riyal.ريال  </strong>
                                    </p>

                                    <t t-if="doc.amount">
                                        <span style=" border: 2px solid black;padding: 5px 20px 5px 20px;text-align:center" t-esc="doc.amount" border="1"/>
                                        <!--<span style=" border: 2px solid black;padding: 5px 37px 5px 37px;" border="1"/>-->
                                    </t>
                                    <t t-if="doc.amount==false">
                                        <span style=" border: 2px solid black;padding: 5px 40px 5px 40px;text-align:center" border="1"/>
                                        <!--<span style=" border: 2px solid black;padding: 5px 40px 5px 40px;" border="1"/>-->
                                    </t>

                                </th>
                            </tr>
                        </thead>
                    </table>
                    <br/>
                    <br/>
                    <table style="border-collapse: collapse;width: 100%;">

                        <tbody>
                            <tr style="text-align:center">
                                <p>
                                    <span style="float:left">Pay To Mr./s.</span>
                                    <strong style="padding-left:10px" t-esc="doc.name"/>
                                    <span style="float:right;width:25%">
                                        اصرفوا إلي السيد(ة)/السادة
                                    </span>
                                </p>
                            </tr>

                            <tr style="text-align:center">
                                <p>
                                    <span style="float:left">Amount of:</span>
                                    <span style="float:right;width:12%">
                                        مبلغ و قدره
                                    </span>
                                    <strong style="padding-left:10px" t-esc="doc.amount_in_arabic"/>
                                </p>
                            </tr>
                            <tr style="text-align:center">
                                <p>
                                    <span style="float:left;padding-right:2%">Bank</span>
                                    <strong t-esc="doc.payment_method_id.name"/>
 علي بنك
                                    <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                    Bank Transfer
                                    <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                    Cash
                                    <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                    ........................... شيك رقم
                                    <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                    حواله
                                    <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                </p>

                                <tr style="text-align:center">
                                    <p>
                                        <span style="float:left;width:10%">Being:</span>
                                        <span style="float:right;width:12%">
                                            وذلك مقابل
                                        </span>
                                        <strong style="padding-left:10px" t-esc="doc.analytic_account_id.name"/>
                                    </p>
                                </tr>
                                <tr style="text-align:end;direction:rtl">
                                    <p style="margin-left:8%;">
                                        <strong style="text-align:right" t-esc="doc.partner_id.name"/>
                                    </p>
                                    <p style="margin-left:8%;">
                                        <strong style="text-align:right" t-esc="doc.total_contract_with_tax"/>
                                    </p>
                                    <p style="margin-left:8%;">
                                قيمة العقد قبل الضريبة                                        <strong style="margin-right:20px" t-esc="doc.total_contract"/>
                                 قيمة الضريبة                                        <strong style="margin-right:20px" t-esc="doc.tax_precentage"/>
%
                                 قيمة العقد يعد الضريبة                                        <strong style="margin-right:20px" t-esc="doc.total_contract_with_tax"/>
                                    </p>
                                    <p style="margin-left:8%;">
                                        <strong style="text-align:right" t-esc="doc.memo"/>
الملاحظات
                                    </p>

                                    <p style="margin-left:8%;">
                                        <strong style="text-align:right" t-esc="doc.reject_reason"/>
الرفض
                                    </p>


                                    <p style="margin-left:10%;">
                                    ........................................................................................................................................
                                    </p>
                                    <p style="margin-left:10%;">
                                    ........................................................................................................................................
                                    </p>
                                </tr>
                            </tr>

                        </tbody>
                    </table>
                    <br/>
                    <br/>
                    <t t-if="doc.payment_template_id">
                        <table style="border: 1px solid;text-align:center;width:100%">
                            <thead style="border: 1px solid;">
                                <tr>
                                    <td>الملاحظة</td>
                                    <td>تم الدفع</td>
                                    <td>المبلغ</td>
                                    <td>التاريخ</td>
                                    <td>الدفعة</td>
                                </tr>
                            </thead>
                            <tbody style="border: 1px solid;">
                                <t t-foreach="doc.payment_template_id.line_ids" t-as="line">
                                    <tr>

                                        <td>
                                            <span t-esc="line.note"/>
                                        </td>
                                        <td>
                                            <t t-if="line.is_paid==true">
                                                <input type="checkbox" id="oe_import_tracking" checked="checked" style="margin-left:12px;margin-right:12px"/>
                                            </t>
                                            <t t-else="line.is_paid==false">
                                                <input type="checkbox" id="oe_import_tracking" style="margin-left:12px;margin-right:12px"/>
                                            </t>
                                        </td>
                                        <td>
                                            <span t-esc="line.payment_amount"/>
                                        </td>
                                        <td>
                                            <span t-esc="line.payment_date"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.payment_template_id.name"/>
                                        </td>
                                    </tr>
                                </t>

                            </tbody>
                        </table>
                    </t>
                    <br/>
                    <br/>
                    <table>
                        <tr>
                            <th colspan="4" style="width:  25%; text-align: center;">
                                <span>إعتماد</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>مراجعة</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>مراجعة</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>إعداد</span>
                            </th>

                        </tr>

                        <tr>
                            <th colspan="4" style="width: 25%; text-align: center;">
                                <span>Approved By</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>Reviewed By</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>Reviewed By</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>Prepared By</span>
                            </th>

                        </tr>

                        <tr>
                            <th colspan="4" style="width:  25%; text-align: center;">
                                <span>العضو المنتدب</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>المدير المالي</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>رئيس الحسابات</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>المحاسب</span>
                            </th>

                        </tr>
                        <tr>
                            <th colspan="4" style="width:  25%; text-align: center;">
                                <span>M.D</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>C.F.O.</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>C.A.</span>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <span>A.C.</span>
                            </th>

                        </tr>
                        <tr>
                            <th colspan="4" style="width:  33.33%; text-align: center;">
                                <t t-if="doc.is_signed_by_employee">
                                    <img t-if="doc.employee_image" t-attf-src="data:image/*;base64,{{doc.employee_image}}" style="width:40%;height:40%"/>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.is_signed_by_accountant">
                                    <img t-if="doc.accountant_image" t-attf-src="data:image/*;base64,{{doc.accountant_image}}" style="width:40%;height:40%"/>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.is_signed_by_manager">
                                    <img t-if="doc.manager_image" t-attf-src="data:image/*;base64,{{doc.manager_image}}" style="width:40%;height:40%"/>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.is_signed_by_ceo">
                                    <img t-if="doc.ceo_image" t-attf-src="data:image/*;base64,{{doc.ceo_image}}" style="width:40%;height:40%"/>
                                </t>
                            </th>
                        </tr>

                        <tr>
                            <th colspan="4" style="width: 33.33%;  text-align: center;">
                                <t t-if="doc.employee_user">
                                    <span t-esc="doc.employee_user"/>
                                </t>
                                <t t-else="doc.employee_user==false">
                                    <span>..........................</span>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.accountant_user">
                                    <span t-esc="doc.accountant_user"/>
                                </t>
                                <t t-else="doc.accountant_user==false">
                                    <span>..........................</span>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.manager_user">
                                    <span t-esc="doc.manager_user"/>
                                </t>
                                <t t-else="doc.manager_user==false">
                                    <span>..........................</span>
                                </t>
                            </th>
                            <th colspan="4" style="width: 33.33%; text-align: center;">
                                <t t-if="doc.ceo_user">
                                    <span t-esc="doc.ceo_user"/>
                                </t>
                                <t t-else="doc.ceo_user==false">
                                    <span>..........................</span>
                                </t>
                            </th>

                        </tr>
                    </table>
                </div>
            </t>

        </t>
    </template>
    <record id="payment_report_action" model="ir.actions.report">
        <field name="name">Payment Request Report</field>
        <field name="model">emlpoyee.payment.register</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">new_custom.report_template</field>
        <field name="report_file">new_custom.report_template</field>
        <field name="binding_model_id" ref="model_emlpoyee_payment_register"/>
        <field name="binding_type">report</field>
    </record>


</odoo>